@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*<link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.js"></script>*@
    @RenderSection("Scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tutor Search", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Users List", "Index", "Account")</li>
                    <li>@Html.ActionLink("Vacancy List", "Index", "Vacancy")</li>
                    <li>
                        @if (User.IsInRole("admin"))
                        {
                            @Html.ActionLink("AdminKA", "Index", "Admin")
                        }
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <div class="custom">

                                Welcome to the TutorSearch @Html.ActionLink(User.Identity.Name.ToString(), "GetUserPage", "Account")
                                || @Html.ActionLink("Log Out", "Logoff", "Account")
                            </div>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log In", "Login", "Account")</li>
                        <li>@Html.ActionLink("Sign In", "Register", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year |Tutor Search</p>
        </footer>
    </div>
</body>
</html>
